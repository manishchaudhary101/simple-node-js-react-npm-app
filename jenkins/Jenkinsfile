pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {

         stage('Email') {
    steps {
        script {
            def emailSubject = "${env.JOB_NAME} - Build# ${env.BUILD_NUMBER} - ${env.BUILD_STATUS}"
            emailext body: 'Testingggg', recipientProviders: [buildUser()], replyTo: 'No-Reply@test.com', subject: 'This is Test', to: 'imchaudhary101@gmail.com'
        }
    }
}

        stage("Build") {
             
            steps {
                 input "Start the Build for ${params.ENVIRONMENT} Server ?"
                echo "Building to ${params.ENVIRONMENT}"
                sh "npm install"
                sh "npm run build"
                 
            }
        }
        stage("Deploy") {
             steps{ echo "deploying to ${params.ENVIRONMENT}" }
            
        }
    }
}
