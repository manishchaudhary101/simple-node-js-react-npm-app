pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {
        stage("Build to ${params.ENVIRONMENT}") {
             
            steps {
                 input "Start the Build for ${params.ENVIRONMENT} Server ?"

                sh "npm install"
                sh "npm run build"
                 echo "Building to ${params.ENVIRONMENT}"
            }
        }
        stage("Deploy") {
             steps{ echo "deploying to ${params.ENVIRONMENT}" }
            
        }
    }
}
