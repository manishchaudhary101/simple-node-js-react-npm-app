pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node"}
  
     stages {
        stage("Build") {
             when {
                expression { 
                     return params.ENVIRONMENT == 'AUS'
                }
            }

            steps {

                sh "npm install"
                sh "npm run build"
                 echo "Building to AUS"
            }
        }
        stage("Deploy") {
             steps{ echo "deploying"
                   sshPublisher(publishers: [sshPublisherDesc(configName: 'EC2-1', sshCredentials: [encryptedPassphrase: '{AQAAABAAAAAQ6t+HHnQYlx49/yfgOxmj2zpy7CP0u/Bu0o/SGQ5jRjg=}', key: '', keyPath: '', username: 'ec2-user'], transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '.', remoteDirectorySDF: false, removePrefix: 'build/static/media', sourceFiles: 'build/static/media/logo.103b5fa1.svg')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
            }
        }
    }
}
