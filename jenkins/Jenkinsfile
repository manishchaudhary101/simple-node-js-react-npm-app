pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {

    stage('Email') {
        steps{
            script {
                emailext mimeType: 'text/html',
                    subject: "[Jenkins]${currentBuild.fullDisplayName}",
                    to: "imchaudhary101@gmail.com",
                    body: "Before build"
    }
}
    }
        
        stage("Build") {
             
            steps {
                 
                echo "Building to ${params.ENVIRONMENT}"
                sh "npm install"
                sh "npm run build"
                 
            }
        }
        stage("Deploy") {
             steps{ input "Ready to deploy for ${params.ENVIRONMENT} Server ?"
                 echo "deploying to ${params.ENVIRONMENT}" 

                   /* sshPublisher(publishers: [sshPublisherDesc(configName: 'bastion', 
                    transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '', execTimeout: 120000, flatten: false, 
                    makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/var/www/html', remoteDirectorySDF: false, removePrefix: '/build', 
                    sourceFiles: 'build/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
                    */ }
            
     
        }
    }


  post {
    success {
      sh "echo 'Send mail on success'"
      mail to:"imchaudhary101@gmail.com", subject:"SUCCESS: ${currentBuild.fullDisplayName}", body: "Yay, we passed."
    }
    failure {
      sh "echo 'Send mail on failure'"
      mail to:"imchaudhary101@gmail.com", subject:"FAILURE: ${currentBuild.fullDisplayName}", body: "Boo, we failed."
    }
  }
}