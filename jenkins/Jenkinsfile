pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {
        stage("Build") {
             input {
  message 'Choose the Environment'
}
     when {
       environment name: 'ENVIRONMENT', value: 'AUS'
     }
            steps {

                sh "npm install"
                sh "npm run build"
            }
        }
        stage("Deploy") {
            steps {
                echo "deploying"
                
            }
        }
    }
}
