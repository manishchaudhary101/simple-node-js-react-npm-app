pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {

    stage('Email') {
        steps{
            script {
                emailext mimeType: 'text/html',
                    subject: "[Jenkins]${currentBuild.fullDisplayName}",
                    to: "imchaudhary101@gmail.com",
                    body: "Before build"
    }
}
    }
        stage("Build") {
             
            steps {
                 input "Start the Build for ${params.ENVIRONMENT} Server ?"
                echo "Building to ${params.ENVIRONMENT}"
                sh "npm install"
                sh "npm run build"
                 
            }
        }
        stage("Deploy") {
             steps{ echo "deploying to ${params.ENVIRONMENT}" }
            
     
        }
    }


  post {
    success {
      sh "echo 'Send mail on success'"
      mail to:"imchaudhary101@gmail.com", subject:"SUCCESS: ${currentBuild.fullDisplayName}", body: "Yay, we passed."
    }
    failure {
      sh "echo 'Send mail on failure'"
      mail to:"imchaudhary101@gmail.com", subject:"FAILURE: ${currentBuild.fullDisplayName}", body: "Boo, we failed."
    }
  }
}