pipeline {
     agent any
         parameters {
        choice(
            choices: ['AUS' , 'EU', 'USA'],
            description: '',
            name: 'ENVIRONMENT')
         }
   
     tools {nodejs "Node16"}
  
     stages {

    stage('Email') {
        steps{
            script {
                def emailSubject = "${env.JOB_NAME} - Build# ${env.BUILD_NUMBER} - ${env.BUILD_STATUS}"
                emailext mimeType: 'text/html',
                    subject: "[Jenkins]${currentBuild.fullDisplayName}",
                    to: "imchaudhary101@gmail.com",
                    body: '''<a href="${BUILD_URL}input">click to approve</a>'''
    }
}
    }
        stage("Build") {
             
            steps {
                 input "Start the Build for ${params.ENVIRONMENT} Server ?"
                echo "Building to ${params.ENVIRONMENT}"
                sh "npm install"
                sh "npm run build"
                 
            }
        }
        stage("Deploy") {
             steps{ echo "deploying to ${params.ENVIRONMENT}" }
            
     
        }
    }


  post {
    success {

      emailext (
          to: 'imchaudhary101@gmail.com',
          subject: "SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
          body: """<p>SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
            <p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""",
          recipientProviders: [[$class: 'DevelopersRecipientProvider']]
        )
    } }
}